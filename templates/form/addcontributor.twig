{% extends 'main.twig' %}

{% block contenttitle %}
	<div class="pull-left">
		<i class="fa fa-user"></i>Add Contributor
	</div>
	<div class="pull-right">
		<a href="{{ path_for('listContributor') }}" class="button secondary"><i class="fa fa-arrow-left"></i>Back</a>
	</div>
{% endblock contenttitle %}

{% block content %}
	<form action="" method="post">
		<label class="medium-4 columns">First Name
			<input type="text" name=":firstName" required>
		</label>
		<label class="medium-4 columns">Middle Name
			<input type="text" name=":middleName" required>
		</label>
		<label class="medium-4 columns">Last Name
			<input type="text" name=":lastName" required>
		</label>
		<label class="medium-4 columns">Email Address
			<input type="email" name=":email" required>
		</label>
		<label class="medium-4 columns">Password
			<input type="password" name=":password" id="password" required>
		</label>
		<label class="medium-4 columns">Confirm Password
			<input type="password" id="confirmPassword" required>
		</label>
		<label class="medium-4 columns">Contact Number
			<input type="text" name=":contact" value="+63" required>
		</label>
		<label class="medium-4 columns">Type
			<select id="type" name=":type" required>
				<option value="admin">Administrator</option>
				<option value="contributor">Contributor</option>
			</select>
		</label>
		<div class="medium-12 columns">
			<button id="typeadd" class="pull-right button button--primary" type="submit"><i class="fa fa-plus"></i>Add Administrator</button>
		</div>
	</form>
{% endblock content %}

{% block scripts %}
	<script>
		$('#type').change(function () {
			var optionSelected = $(this).find("option:selected");
			var textSelected   = optionSelected.text();
			$('#typeadd').html("<i class='fa fa-plus'></i>Add "+textSelected);
		});

		$("#confirmPassword").keyup(function(){
			$confirm = this.value;
			$password = $("#password").val();
			if($confirm == $password){
				$("#confirmPassword").removeClass('mismatch');
				$("#confirmPassword").addClass('match');
			}else{
				$("#confirmPassword").removeClass('match');
				$("#confirmPassword").addClass('mismatch');
			}
		});

		$("#password").keyup(function(){
			$confirm = $(this).val();
			$password = $("#confirmPassword").val();
			if($confirm == $password){
				$("#confirmPassword").removeClass('mismatch');
				$("#confirmPassword").addClass('match');
			}else{
				$("#confirmPassword").removeClass('match');
				$("#confirmPassword").addClass('mismatch');
			}
		});
	</script>
{% endblock scripts %}