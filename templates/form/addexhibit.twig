{% extends 'main.twig' %}

{% block contenttitle %}
	<div class="pull-left">
		<i class="fa fa-list"></i>Add Exhibit
	</div>
	<div class="pull-right">
		<a href="{{ path_for('listExhibist') }}" class="button secondary"><i class="fa fa-arrow-left"></i>Back</a>
	</div>
{% endblock contenttitle %}

{% block content %}
	<form action="" method="post" enctype="multipart/form-data">
		<label class="medium-6 columns">Exhibit Name
			<input type="text" name=":exhibit" accept=".mp3">
		</label>
		<label class="medium-6 columns">Audio File
			<input class="inputfile" id="inputfile" type="file" name=":audio" accept=".mp3"/>
			<label class="inputfilelabel" for="inputfile"><i class="fa fa-upload"></i>Choose a file</label>
		</label>
		<label class="medium-12 columns">Exhibit Description
			<textarea rows="20" name=":description" accept=".mp3"></textarea>
			<button class="pull-right button button--primary" type="submit"><i class="fa fa-plus"></i>Add Exhibit</button>
		</label>
		
	</form>
{% endblock content %}

{% block scripts %}
	<script>
		$('.inputfile').each( function()
		{
			var $input = $(this),
			$label = $input.next( 'label' ),
			labelVal = $label.html();

			$input.on( 'change', function(e)
			{
				var fileName = '';
				
				fileName = e.target.value.split( '\\' ).pop();

				if( fileName ){
					$('.inputfilelabel').html( fileName );
				}
				else{
					$label.html( labelVal );
				}
			});
		});
	</script>
{% endblock scripts %}